rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    //
    // DEFAULT (Deny all reads and writes)
    //
    match /{document=**} {
      allow read, write: if false;
    }
    
    //
    // USERS
    //
    match /users/{userId} {
      // Allow user to read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow user to create their own user document upon signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can read/write any user document
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    //
    // LISTINGS
    //
    match /listings/{listingId} {
      // Allow anyone to read approved listings
      allow read: if resource.data.status == 'approved';
      // Allow authenticated users to create a listing
      allow create: if request.auth != null;
      // Allow the owner of the listing or an admin to update it
      allow update: if request.auth.uid == resource.data.ownerId 
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Allow only admins to delete listings
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    //
    // CATEGORIES
    //
    match /categories/{categoryId} {
        // Allow anyone to read categories
        allow read: if true;
        // Allow only admins to create or delete categories
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
