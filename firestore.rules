
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Listings collection
    match /listings/{listingId} {
      // Anyone can read approved listings
      allow read: if resource.data.status == 'approved';
      
      // Logged-in users can create new listings with a 'pending' status
      allow create: if request.auth != null && request.resource.data.status == 'pending';
      
      // Admins can approve, update, or delete any listing
      allow update, delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can create their own user document (on signup)
      allow create: if request.auth.uid == userId;
      
      // Users can read their own document
      allow read: if request.auth.uid == userId;
      
      // Admins can read any user document
      allow read: if isAdmin();

      // Notifications subcollection
      match /notifications/{notificationId} {
        // Users can read their own notifications
        allow read, update: if request.auth.uid == userId;
        
        // Admins can create notifications (for approvals)
        allow create: if isAdmin();
      }
    }
  }
}
